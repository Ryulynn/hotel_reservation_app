<!--User#login_form-->
<div class="user_signup">
    <h3>ログイン</h3>
    <div class="login_failure_message">
        <%= @login_failure_message %>
    </div>
    <%= form_tag("/user/login", method: :post) do %>
        <p>メールアドレス</p>
        <%= email_field_tag :email, value=@email%>
        <p>パスワード</p>
        <%= password_field_tag :password %>
        </br>
        <%= submit_tag "ログイン" %>
    <% end %>
</div>